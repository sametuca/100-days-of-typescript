# APPLICATION
NODE_ENV=development
APP_NAME=DevTracker
APP_VERSION=1.0.0

# SERVER
PORT=3000
HOST=localhost
API_PREFIX=/api/v1

# DATABASE
DB_PATH=./data/devtracker.db
DB_VERBOSE=true

# CORS
CORS_ORIGIN=*

# LOGGING
LOG_LEVEL=debug
LOG_DIR=./logs

# JWT (Change these!)
JWT_SECRET=change-this-secret-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change-this-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d

# SECURITY
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# FEATURES
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true

# EMAIL
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@devtracker.com