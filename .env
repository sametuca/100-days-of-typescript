# ============================================
# DEVTRACKER - ENVIRONMENT VARIABLES
# ============================================
NODE_ENV=development

APP_NAME=DevTracker

APP_VERSION=1.0.0

PORT=3000

HOST=localhost

API_PREFIX=/api/v1

DB_PATH=./data/devtracker.db

# DB_VERBOSE = SQL query'leri console'a yazdır
# true = Yazdır (development için)
# false = Yazdırma (production için)
DB_VERBOSE=true

CORS_ORIGIN=*

LOG_LEVEL=debug

LOG_DIR=./logs

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

JWT_EXPIRES_IN=7d

JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

JWT_REFRESH_EXPIRES_IN=30d

# BCRYPT_ROUNDS = Password hash için round sayısı
# 10 = Orta güvenlik (hızlı)
# 12 = Yüksek güvenlik (yavaş)
BCRYPT_ROUNDS=10

# RATE_LIMIT_WINDOW = Rate limit penceresi (ms)
# 900000 = 15 dakika
RATE_LIMIT_WINDOW=900000

# RATE_LIMIT_MAX = Pencere başına maksimum istek
RATE_LIMIT_MAX=100

# ENABLE_API_DOCS = API dokümantasyonu aktif mi?
ENABLE_API_DOCS=true

# ENABLE_SWAGGER = Swagger UI aktif mi?
ENABLE_SWAGGER=true

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=DevTracker <noreply@devtracker.com>
EMAIL_FROM_NAME=DevTracker