# ============================================
# DEVTRACKER - ENVIRONMENT VARIABLES
# ============================================

# ------------------------------------------
# APPLICATION
# ------------------------------------------
# NODE_ENV = Çalışma ortamı
NODE_ENV=development

# APP_NAME = Uygulama adı
APP_NAME=DevTracker

# APP_VERSION = Versiyon
APP_VERSION=1.0.0

# ------------------------------------------
# SERVER
# ------------------------------------------
# PORT = Sunucu port numarası
PORT=3000

# HOST = Sunucu adresi
# localhost = Sadece bu bilgisayardan erişim
# 0.0.0.0 = Tüm network'lerden erişim
HOST=localhost

# API_PREFIX = API route prefix
API_PREFIX=/api/v1

# ------------------------------------------
# DATABASE
# ------------------------------------------
# DB_PATH = SQLite database dosyası yolu
DB_PATH=./data/devtracker.db

# DB_VERBOSE = SQL query'leri console'a yazdır
# true = Yazdır (development için)
# false = Yazdırma (production için)
DB_VERBOSE=true

# ------------------------------------------
# CORS
# ------------------------------------------
# CORS_ORIGIN = Hangi origin'lerden istek kabul edilir
# * = Herkesten (development için)
# https://myapp.com = Sadece bu domain (production için)
CORS_ORIGIN=*

# ------------------------------------------
# LOGGING
# ------------------------------------------
# LOG_LEVEL = Minimum log seviyesi
# debug = Tüm logları göster
# info = Info ve üstü
# warn = Warn ve üstü
# error = Sadece error
LOG_LEVEL=debug

# LOG_DIR = Log dosyalarının klasörü
LOG_DIR=./logs

# ------------------------------------------
# JWT (İleride kullanılacak)
# ------------------------------------------
# JWT_SECRET = JWT token için secret key
# Güçlü, rastgele bir string olmalı
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT_EXPIRES_IN = Token süresi
# 1h = 1 saat
# 7d = 7 gün
# 30d = 30 gün
JWT_EXPIRES_IN=7d

# JWT_REFRESH_SECRET = Refresh token secret
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

# JWT_REFRESH_EXPIRES_IN = Refresh token süresi
JWT_REFRESH_EXPIRES_IN=30d

# ------------------------------------------
# SECURITY
# ------------------------------------------
# BCRYPT_ROUNDS = Password hash için round sayısı
# 10 = Orta güvenlik (hızlı)
# 12 = Yüksek güvenlik (yavaş)
BCRYPT_ROUNDS=10

# RATE_LIMIT_WINDOW = Rate limit penceresi (ms)
# 900000 = 15 dakika
RATE_LIMIT_WINDOW=900000

# RATE_LIMIT_MAX = Pencere başına maksimum istek
RATE_LIMIT_MAX=100

# ------------------------------------------
# FEATURES (Özellik bayrakları)
# ------------------------------------------
# ENABLE_API_DOCS = API dokümantasyonu aktif mi?
ENABLE_API_DOCS=true

# ENABLE_SWAGGER = Swagger UI aktif mi?
ENABLE_SWAGGER=true

# ------------------------------------------
# EMAIL (İleride kullanılacak)
# ------------------------------------------
# EMAIL_HOST = SMTP server
EMAIL_HOST=smtp.gmail.com

# EMAIL_PORT = SMTP port
EMAIL_PORT=587

# EMAIL_USER = SMTP kullanıcı adı
EMAIL_USER=your-email@gmail.com

# EMAIL_PASSWORD = SMTP şifresi
EMAIL_PASSWORD=your-email-password

# EMAIL_FROM = Gönderen email adresi
EMAIL_FROM=noreply@devtracker.com